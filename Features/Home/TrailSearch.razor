@inject NavigationManager NavManager

<div class="display-4 text-center">Welcome to Blazing Trails</div>
<p class="lead text-center">Find the most beautiful hiking trails using first search!</p>
<p class="mt-4">
    <input @onkeydown="SearchForTrail"
           @bind="_searchTerm"
           @bind:event="oninput"
           type="text"
           placeholder="Search for a trail..."
           class="form-control form-control-lg" />
</p>

<h3>TrailSearch</h3>

@code {
    private string _searchTerm = string.Empty;

    private void SearchForTrail(KeyboardEventArgs args)
    {
        if (args.Key != "Enter") return;
        NavManager.NavigateTo($"/search/{_searchTerm}");
    }
}
